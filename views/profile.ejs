<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Document</title>
</head>

<body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
        <div class="w-full flex justify-between mb-10">
            <div class="flex items-start gap-5">
                <div class="w-15 h-15 rounded-md overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profilepic %>">
                </div>
                <h3 class="text-3xl">Hello, <%= user.name %>
                </h3>
            </div>
            <div class="flex gap-4">
                <a class="bg-orange-500 rounded-md px-3 py-2 text-sm inline-block h-10" href="/profile/upload">Change
                    Profile Pic</a>
                <a class="bg-red-500 rounded-md px-3 py-2 text-sm inline-block h-10" href="/logout">Logout</a>
            </div>
        </div>
        <!-- ----------------------------------- -->

        <h5 class="mb-5 mt-3">You can create a new post..</h5>
        <form action="/post" method="POST">
            <textarea placeholder="What's on your mind ??"
                class="p-3 outline-none w-1/3 block resize-none bg-transparent border-2 border-zinc-800 rounded-md"
                name="content"></textarea>
            <input class="px-3 py-2 w-40 bg-blue-500 text-sm block rounded-md mt-2" type="submit"
                value="Create new post">
        </form>

        <div class="flex gap-5 justify-between">
            <div class="posts mt-20">
                <h3 class="text-zinc-400">Your Posts..</h3>
                <!-- <%= console.log(posts) %> -->
                <div class="postcontainer mt-5">
                    <% user.posts.reverse().forEach((post)=>{ %>
                        <div class="post mb-4 rounded-md w-100 p-4 border-2 border-zinc-700 bg-zinc-800">
                            <h4 class="text-blue-500 mb-2">@<%= user.username %>
                            </h4>
                            <p class="text-sm">
                                <%= post.content %>
                            </p>
                            <small class="mt-5 inline-block">
                                <%= post.likes.length %> likes
                            </small>
                            <div class="btns flex gap-4">
                                <a class="text-blue-500" href="/like/<%= post._id %>">
                                    <%= post.likes.indexOf(user._id)===-1 ? "Like" : "Unlike" %>
                                </a>
                                <a class="text-zinc-600" href="/edit/<%= post._id %>">Edit</a>
                                <a class="text-red-600" href="/delete/<%= post._id %>">Delete</a>
                            </div>
                        </div>
                        <% }) %>
                </div>
            </div>

            <div class="posts mt-20">
                <h3 class="text-zinc-400">All Posts..</h3>
                <!-- <%= console.log(posts) %> -->
                <div class="postcontainer mt-5">
                    <!-- <% posts.forEach((post)=>{ %>
                    <div class="post mb-4 rounded-md w-1/3 p-4 border-2 border-zinc-700 bg-zinc-800">
                        <h4 class="text-blue-500 mb-2">@<%= post.user.username %></h4>
                        <p class="text-sm"><%= post.content %></p>
                        <small class="mt-5 inline-block"><%= post.likes.length %> likes</small>
                        <div class="btns flex gap-4">
                            <a class="text-blue-500" href="/like/<%= post._id %>"><%= post.likes.indexOf(user._id) === -1 ? "Like" : "Unlike" %></a>
                            <a class="text-zinc-600" href="/edit/<%= post._id %>">Edit</a>
                            <a class="text-red-600" href="/delete/<%= post._id %>">Delete</a>
                        </div>
                    </div>
                <% }) %> -->
                    <% posts.filter((post)=> post.user.username !== user.username ).forEach((post)=>{ %>
                        <div class="post mb-4 rounded-md w-100 p-4 border-2 border-zinc-700 bg-zinc-800">
                            <h4 class="text-blue-500 mb-2">@<%= post.user.username %>
                            </h4>
                            <p class="text-sm">
                                <%= post.content %>
                            </p>
                            <small class="mt-5 inline-block">
                                <%= post.likes.length %> likes
                            </small>
                            <div class="btns flex gap-4">
                                <a class="text-blue-500" href="/like/<%= post._id %>">
                                    <%= post.likes.indexOf(user._id)===-1 ? "Like" : "Unlike" %>
                                </a>
                                <!-- <a class="text-zinc-600" href="/edit/<%= post._id %>">Edit</a>
                                <a class="text-red-600" href="/delete/<%= post._id %>">Delete</a> -->
                            </div>
                        </div>
                        <% }) %>
                </div>
            </div>
        </div>
    </div>
</body>

</html>